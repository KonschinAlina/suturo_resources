<?xml version="1.0"?>

<robot name="suturo_kitchen" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="suturo_kitchen" params="name parent *origin">
     <link name="kitchen_main">
       <inertial>
         <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
         <mass value="1"/>
         <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
       </inertial>
    </link>

    <joint name="kitchen_main" type="fixed">
	  <xacro:insert_block name="origin" />
	  <parent link="${parent}"/>
	  <child link="kitchen_main"/>
    </joint>

    <joint name="kitchen_main_joint" type="fixed">
	  <xacro:insert_block name="origin" />
	  <parent link="kitchen_main"/>
	  <child link="sink_area_dish_washer_main"/>
    </joint>

  <link name="sink_area_dish_washer_main">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/misc/DishWasher.obj"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/misc/DishWasher.obj"/>
      </geometry>
    </collision>
  </link>
  <link name="sink_area_dish_washer_door">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
    </inertial>
    <visual>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/misc/DishWasherDoor.obj"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/misc/DishWasherDoor.obj"/>
      </geometry>
    </collision>
  </link>
  <link name="sink_area_dish_washer_door_handle">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/handles/Handle60.obj"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/handles/Handle60.obj"/>
      </geometry>
    </collision>
  </link>

  	<link name="dishwasher_tab"/>

	<!--
    <xacro:if value="simulated"/>
    -->
	<joint name="dishwasher_tab_joint" type="fixed">
	  <origin xyz="-0.1 0.1 0.15" rpy="0 0 0" />
	  <parent link="sink_area_dish_washer_door_handle"/>
      <child link="dishwasher_tab"/>
	</joint>

  <joint name="sink_area_dish_washer_main_joint" type="fixed"> <!-- was revolute before, changed to fixed -->
    <axis xyz="1 0 0" />
    <!-- <limit effort="300" lower="0" upper="0" velocity="10"/> -->
    <origin rpy="0 0 0" xyz="0.08 -0.78 0.44 "/>
    <parent link="kitchen_main"/>
    <child link="sink_area_dish_washer_main"/>
  </joint>
 <joint name="sink_area_dish_washer_door_joint" type="revolute">
    <origin rpy="-1.57079632679 0.03 0" xyz="0.27 0. -0.325"/>
    <parent link="sink_area_dish_washer_main"/>
    <child link="sink_area_dish_washer_door"/>
    <axis xyz="0 0 1"/>
    <!-- FIXME make closed position stable instead of forbidding opening... -->
    <!-- TODO Fix Limits to be able to open dishwasher-->
    <limit effort="300" lower="0.0" upper="1.57079632679" velocity="10"/>
  </joint>
  <joint name="sink_area_dish_washer_door_handle_joint" type="fixed">
    <origin rpy="-1.57079632679 0 0" xyz="0.0625 -0.6325 0."/>
    <parent link="sink_area_dish_washer_door"/>
    <child link="sink_area_dish_washer_door_handle"/>
  </joint>

  </xacro:macro>
</robot>