<?xml version="1.0"?>

<robot name="suturo_dishwasher_robocup" xmlns:xacro="http://ros.org/wiki/xacro">

  <material name="dishwasher_robocup_table_color">
	<color rgba="0.255 0.62 0.223 1"/>
  </material>

  <xacro:macro name="suturo_dishwasher_robocup" params="name parent *origin">
     <link name="dishwasher_main">
       <inertial>
         <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
         <mass value="1"/>
         <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
       </inertial>
    </link>

    
    <joint name="dishwasher_main" type="fixed">
	  <xacro:insert_block name="origin" />
	  <parent link="${parent}"/>
	  <child link="dishwasher_main"/>
    </joint>

	<!-- Below there is another joint connecting these two links,
		 which breaks giskards ability to work with this -->
    <!-- <joint name="dishwasher_main_joint" type="fixed"> -->
	<!--   <xacro:insert_block name="origin" /> -->
	<!--   <parent link="dishwasher_main"/> -->
	<!--   <child link="sink_area_dish_washer_main"/> -->
    <!-- </joint> -->

  <link name="sink_area_dish_washer_main">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/misc/DishWasher.obj"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/misc/DishWasher.obj"/>
      </geometry>
    </collision>
  </link>
  <link name="sink_area_dish_washer_door">
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
    </inertial>
    <visual>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/misc/DishWasherDoor.obj"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/misc/DishWasherDoor.obj"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="sink_area_dish_washer_door">
    <turnGravityOff>true</turnGravityOff>
  </gazebo>
  <link name="sink_area_dish_washer_door_handle">
    <inertial>
      <origin rpy="0 0 0" xyz="0.1 0.0 0.0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0.01 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/handles/Handle60.obj"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.01 0 0"/>
      <geometry>
        <mesh filename="package://iai_kitchen/meshes/handles/Handle60.obj"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="sink_area_dish_washer_door_handle">
    <turnGravityOff>true</turnGravityOff>
  </gazebo>

  <link name="dishwasher_tab"/>

  <link name="dishwasher_table:d_table:table_origin"/>
  <link name="dishwasher_table:d_table:table_front_edge_center"/>
  <link name="dishwasher_table:d_table:table_center">
      <visual>
        <material name="dishwasher_robocup_table_color"/>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.593 0.6 0.02" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.593 0.6 0.02" />
        </geometry>
      </collision>
  </link>




	<!--
    <xacro:if value="simulated"/>
    -->
	<joint name="dishwasher_tab_joint" type="fixed">
	  <origin xyz="-0.1 0.1 0.15" rpy="0 0 0" />
	  <parent link="sink_area_dish_washer_door_handle"/>
      <child link="dishwasher_tab"/>
	</joint>

  <joint name="sink_area_dish_washer_main_joint" type="fixed"> <!-- was revolute before, changed to fixed -->
    <axis xyz="1 0 0" />
    <!-- <limit effort="300" lower="0" upper="0" velocity="10"/> -->
    <!-- CHANGE PARAMS HERE !!!!!-->
    <origin rpy="0 0 0" xyz="0.0 0.0 0.44 "/>
    <parent link="dishwasher_main"/>
    <child link="sink_area_dish_washer_main"/>
  </joint>
 <joint name="sink_area_dish_washer_door_joint" type="revolute">
    <origin rpy="-1.57079632679 0.03 0" xyz="0.27 0. -0.325"/>
    <parent link="sink_area_dish_washer_main"/>
    <child link="sink_area_dish_washer_door"/>
    <axis xyz="0 0 1"/>
    <!-- FIXME make closed position stable instead of forbidding opening... -->
    <!-- TODO Fix Limits to be able to open dishwasher-->
    <limit effort="300" lower="0.0" upper="1.57079632679" velocity="10"/>
  </joint>
  <joint name="sink_area_dish_washer_door_handle_joint" type="fixed">
    <origin rpy="-1.57079632679 0 0" xyz="0.0625 -0.6625 0."/>
    <parent link="sink_area_dish_washer_door"/>
    <child link="sink_area_dish_washer_door_handle"/>
  </joint>

  <!-- from here for dishwasher_table -->
  <joint name="dish_washer_table_main_joint" type="fixed">
    <origin rpy="0 0 ${pi}" xyz="0.0 0.0 0.3971"/>
    <parent link="sink_area_dish_washer_main"/>
    <child link="dishwasher_table:d_table:table_origin"/>
  </joint>

  <joint name="dish_washer_table_center_joint" type="fixed">
    <origin rpy="0 0 0" xyz="-0.3 0 0"/>
    <parent link="dishwasher_table:d_table:table_origin"/>
    <child link="dishwasher_table:d_table:table_front_edge_center"/>
  </joint>

  <joint name="dish_washer_table_edge_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="dishwasher_table:d_table:table_origin"/>
    <child link="dishwasher_table:d_table:table_center"/>
  </joint>

  </xacro:macro>
</robot>
