<?xml version="1.0"?>

<launch>
	<!-- remapping of /poseupdate to /global_pose-->
	<node pkg="global_pose_updater" type="global_pose_publisher.py" name="global_pose_publisher_node" />

	<!-- Launches Mapping -->
  <node name="hector_mapping" pkg="hector_mapping" type="hector_mapping" output="screen">
    <param name="map_size" value="2048" />
    <param name="map_resolution" value="0.02" />
    <param name="pub_map_odom_transform" value="true" />
    <param name="scan_topic" value="/hsrb/base_scan" />
    <param name="use_tf_scan_transformation" value="true" />
    <param name="map_update_angle_tresh" value="2.0" />
    <param name="map_update_distance_thresh" value="0.10" />
    <param name="scan_subscriber_queue_size" value="1" />
    <param name="update_factor_free" value="0.39" />
    <param name="update_factor_occupied" value="0.85" />
    <param name="base_frame" value="base_link" />
    <param name="odom_frame" value="odom" />
  </node>
  
    
  <!--<node pkg="tf" type="static_transform_publisher" name="map_nav_broadcaster" args="0 0 0 0 0 0 map nav 100"/>-->
</launch>
  
  
